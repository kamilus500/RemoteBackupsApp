@using RemoteBackupsApp.Infrastructure.Helpers
@using RemoteBackupsApp.MVC.Models.PageResult
@model PagedResult<RemoteBackupsApp.Domain.Models.FileDto>
@{
    var nonce = Context.Items["ScriptNonce"]?.ToString();
}
<partial name="/Views/Home/_Navbar.cshtml" />
@Html.AntiForgeryToken()

<div class="container my-4">

    <div class="text-center mb-3">
        <button type="button" class="btn btn-primary btn-sm px-3 loading-file-btn">
            <i class="bi bi-plus-lg me-1"></i> Załaduj plik
        </button>
        <form enctype="multipart/form-data" method="post" id="uploadForm">
            <input type="file" id="fileInput" name="file" />
        </form>
    </div>

    @if (Model.Items.Any())
    {
        <!-- Desktop Table -->
        <div class="shadow-sm rounded-3 table-responsive table-scroll d-none d-md-block">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light sticky-top">
                    <tr>
                        <th class="text-center">
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="FileName"
                               asp-route-sortDirection="@(Model.SortColumn == "FileName" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Nazwa pliku
                                @if (Model.SortColumn == "FileName")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="FileExtension"
                               asp-route-sortDirection="@(Model.SortColumn == "FileExtension" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Rozszerzenie
                                @if (Model.SortColumn == "FileExtension")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="FileSize"
                               asp-route-sortDirection="@(Model.SortColumn == "FileSize" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Rozmiar
                                @if (Model.SortColumn == "FileSize")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="CreatedAt"
                               asp-route-sortDirection="@(Model.SortColumn == "CreatedAt" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Data dodania
                                @if (Model.SortColumn == "CreatedAt")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.Items)
                    {
                        <tr class="text-center">
                            <td class="file-filename text-truncate">@file.FileName</td>
                            <td>@file.FileExtension</td>
                            <td>@FileHelper.FormatBytes(file.FileSize)</td>
                            <td>@file.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                                    <a asp-controller="File" asp-action="Download" asp-route-fileId="@file.FileId" class="btn btn-sm btn-primary w-100 w-sm-auto">
                                        <i class="bi bi-download me-1"></i> Pobierz
                                    </a>
                                    <a asp-controller="File" asp-action="Delete" asp-route-fileId="@file.FileId" class="btn btn-sm btn-danger w-100 w-sm-auto">
                                        <i class="bi bi-trash me-1"></i> Usuń
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards -->
        <div class="d-md-none">
            @foreach (var file in Model.Items)
            {
                <div class="card mb-3 mobile-file-card">
                    <div class="card-body">
                        <h6 class="card-title text-truncate">@file.FileName</h6>
                        <p class="card-text mb-1"><strong>Rozszerzenie:</strong> @file.FileExtension</p>
                        <p class="card-text mb-1"><strong>Rozmiar:</strong> @FileHelper.FormatBytes(file.FileSize)</p>
                        <p class="card-text mb-2"><strong>Data dodania:</strong> @file.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                        <div class="d-flex flex-column gap-2">
                            <a asp-controller="File" asp-action="Download" asp-route-fileId="@file.FileId" class="btn btn-primary w-100">
                                <i class="bi bi-download me-1"></i> Pobierz
                            </a>
                            <a asp-controller="File" asp-action="Delete" asp-route-fileId="@file.FileId" class="btn btn-danger w-100">
                                <i class="bi bi-trash me-1"></i> Usuń
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="paging">
                <ul class="pagination justify-content-center mt-3">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">«</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">»</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
