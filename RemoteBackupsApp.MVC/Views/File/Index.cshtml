@using RemoteBackupsApp.Infrastructure.Helpers
@model IEnumerable<RemoteBackupsApp.Domain.Models.FileDto>

<partial name="/Views/Home/_Navbar.cshtml" />

<div class="container my-4">
    <div class="row g-4 justify-content-center mb-5">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm border-0 d-flex justify-content-center align-items-center upload-card rounded-3"
                 style="cursor: pointer; min-height: 180px;"
                 onclick="document.getElementById('fileInput').click();">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center p-3">
                    <i class="bi bi-plus-lg fs-1 mb-2 text-primary"></i>
                    <p class="mb-0 fw-semibold">Załaduj plik</p>
                </div>
            </div>
            <form asp-controller="File" asp-action="Upload" enctype="multipart/form-data" method="post" id="uploadForm" style="display:none;">
                <input type="file" id="fileInput" name="file" onchange="document.getElementById('uploadForm').submit();" />
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="shadow-sm rounded-3 table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light sticky-top">
                    <tr>
                        <th class="text-center">Nazwa pliku</th>
                        <th class="text-center">Rozszerzenie</th>
                        <th class="text-center">Rozmiar</th>
                        <th class="text-center">Data dodania</th>
                        <th class="text-center">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model)
                    {
                        <tr>
                            <td class="text-center text-truncate" style="max-width: 200px;">@file.FileName</td>
                            <td class="text-center">@file.FileExtension</td>
                            <td class="text-center">@FileHelper.FormatBytes(file.FileSize)</td>
                            <td class="text-center">@file.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center">
                                <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                                    <a asp-controller="File" asp-action="Download" asp-route-fileId="@file.FileId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-download me-1"></i> Pobierz
                                    </a>
                                    <a asp-controller="File" asp-action="Delete" asp-route-fileId="@file.FileId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash me-1"></i> Usuń
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
