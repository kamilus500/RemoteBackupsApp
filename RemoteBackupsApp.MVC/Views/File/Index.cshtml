@using RemoteBackupsApp.Infrastructure.Helpers
@using RemoteBackupsApp.MVC.Models.PageResult
@model PagedResult<RemoteBackupsApp.Domain.Models.FileDto>
@{
    var nonce = Context.Items["ScriptNonce"]?.ToString();
}
<partial name="/Views/Home/_Navbar.cshtml" />

<div class="container my-4">
    <div id="loadingSpinner" class="d-none text-center my-3">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Ładowanie...</span>
        </div>
    </div>

    <div class="text-center mb-3">
        <button type="button" class="btn btn-primary btn-sm px-3 loading-file-btn">
            <i class="bi bi-plus-lg me-1"></i> Załaduj plik
        </button>
        <form enctype="multipart/form-data" method="post" id="uploadForm">
            <input type="file" id="fileInput" name="file" />
        </form>
    </div>

    @if (Model.Items.Any())
    {
        <div class="shadow-sm rounded-3 table-responsive table-scroll">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light sticky-top">
                    <tr>
                        <th class="text-center">Nazwa pliku</th>
                        <th class="text-center">Rozszerzenie</th>
                        <th class="text-center">Rozmiar</th>
                        <th class="text-center">Data dodania</th>
                        <th class="text-center">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.Items)
                    {
                        <tr>
                            <td class="text-center text-truncate file-filename">@file.FileName</td>
                            <td class="text-center">@file.FileExtension</td>
                            <td class="text-center">@FileHelper.FormatBytes(file.FileSize)</td>
                            <td class="text-center">@file.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center">
                                <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                                    <a asp-controller="File" asp-action="Download" asp-route-fileId="@file.FileId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-download me-1"></i> Pobierz
                                    </a>
                                    <a asp-controller="File" asp-action="Delete" asp-route-fileId="@file.FileId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash me-1"></i> Usuń
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="paging">
                <ul class="pagination justify-content-center mt-3">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">«</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">»</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<script src="https://code.jquery.com/jquery-3.7.0.min.js" nonce="@nonce"></script>
<script src="~/js/file.js" nonce="@nonce"></script>
