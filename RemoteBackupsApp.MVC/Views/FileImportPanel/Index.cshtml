@using RemoteBackupsApp.Domain.Models
@using RemoteBackupsApp.MVC.Models.PageResult
@model PagedResult<FileUploadProgress>

@{
    var nonce = Context.Items["ScriptNonce"]?.ToString();
}

<partial name="/Views/Home/_Navbar.cshtml" />
@Html.AntiForgeryToken()
<div class="container my-4">
    @if (Model.Items.Any())
    {
        <div class="shadow-sm rounded-3 table-responsive table-scroll">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Nazwa pliku</th>
                        <th class="text-center">Postęp</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Rozpoczęto</th>
                        <th class="text-center">Zaktualizowano</th>
                        <th class="text-center">Zakończono</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="text-center text-truncate fileupload-filename">
                                @item.FileName
                            </td>
                            <td class="text-center">
                                <div class="progress">
                                    <div class="progress-bar 
                                                @(item.Status == "Completed" ? "bg-success" : 
                                                    item.Status == "Failed" ? "bg-danger" : "bg-info")" 
                                            role="progressbar"
                                            data-pct="@item.ProgressPct"
                                            aria-valuenow="@item.ProgressPct" 
                                            aria-valuemin="0" aria-valuemax="100"
                                            id="process-@item.ProgressId">
                                        @item.ProgressPct%
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span id="progress-status-@item.ProgressId" 
                                      class="badge 
                                        @(item.Status == "Completed" ? "bg-success" : 
                                          item.Status == "Failed" ? "bg-danger" : 
                                          item.Status == "Uploading" ? "bg-primary" : "bg-secondary")">
                                    @item.Status
                                </span>
                            </td>
                            <td class="text-center small">@item.StartedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center small">@item.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center small" id="progress-completed-@item.ProgressId">
                                @(item.CompletedAt.HasValue 
                                    ? item.CompletedAt.Value.ToString("yyyy-MM-dd HH:mm") 
                                    : "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="paging">
                <ul class="pagination justify-content-center mt-3">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">«</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">»</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<script src="https://code.jquery.com/jquery-3.7.0.min.js" nonce="@nonce"></script>
