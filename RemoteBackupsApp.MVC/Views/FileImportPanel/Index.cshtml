@using RemoteBackupsApp.Domain.Models
@using RemoteBackupsApp.MVC.Models.PageResult
@model PagedResult<FileUploadProgress>

@{
    var nonce = Context.Items["ScriptNonce"]?.ToString();
}

<partial name="/Views/Home/_Navbar.cshtml" />
@Html.AntiForgeryToken()

<div class="container my-4">
    @if (Model.Items.Any())
    {
        <!-- Desktop Table -->
        <div class="shadow-sm rounded-3 table-responsive table-file-import table-scroll d-none d-md-block">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="FileName"
                               asp-route-sortDirection="@(Model.SortColumn == "FileName" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Nazwa pliku
                                @if (Model.SortColumn == "FileName")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="ProgressPct"
                               asp-route-sortDirection="@(Model.SortColumn == "ProgressPct" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Postęp
                                @if (Model.SortColumn == "ProgressPct")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="Status"
                               asp-route-sortDirection="@(Model.SortColumn == "Status" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Status
                                @if (Model.SortColumn == "Status")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="StartedAt"
                               asp-route-sortDirection="@(Model.SortColumn == "StartedAt" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Rozpoczęto
                                @if (Model.SortColumn == "StartedAt")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="UpdatedAt"
                               asp-route-sortDirection="@(Model.SortColumn == "UpdatedAt" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Zaktualizowano
                                @if (Model.SortColumn == "UpdatedAt")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index"
                               asp-route-pageNumber="@Model.PageNumber"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-sortColumn="CompletedAt"
                               asp-route-sortDirection="@(Model.SortColumn == "CompletedAt" && Model.SortDirection == "asc" ? "desc" : "asc")">
                                Zakończono
                                @if (Model.SortColumn == "CompletedAt")
                                {
                                    <i class="bi @(Model.SortDirection == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                                }
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="text-center text-truncate fileupload-filename">@item.FileName</td>
                            <td class="text-center">
                                <div class="progress">
                                    <div class="progress-bar 
                                                @(item.Status == "Completed" ? "bg-success" : 
                                                  item.Status == "Failed" ? "bg-danger" : "bg-info")" 
                                         role="progressbar"
                                         data-pct="@item.ProgressPct"
                                         aria-valuenow="@item.ProgressPct"
                                         aria-valuemin="0" aria-valuemax="100"
                                         id="process-@item.ProgressId">
                                        @item.ProgressPct%
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span id="progress-status-@item.ProgressId" class="badge
                                            @(item.Status == "Completed" ? "bg-success" : 
                                              item.Status == "Failed" ? "bg-danger" : 
                                              item.Status == "Uploading" ? "bg-primary" : "bg-secondary")">
                                    @item.Status
                                </span>
                            </td>
                            <td class="text-center small">@item.StartedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center small">@item.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center small" id="progress-completed-@item.ProgressId">
                                @(item.CompletedAt.HasValue ? item.CompletedAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards (sortowanie zachowane poprzez kolejność Model.Items) -->
        <div class="d-md-none">
            @foreach (var item in Model.Items)
            {
                <div class="card mb-3 mobile-file-card">
                    <div class="card-body">
                        <h6 class="card-title text-truncate">@item.FileName</h6>
                        <p class="card-text mb-1">
                            <strong>Postęp:</strong>
                            <div class="progress">
                                <div class="progress-bar 
                                            @(item.Status == "Completed" ? "bg-success" : 
                                              item.Status == "Failed" ? "bg-danger" : "bg-info")" 
                                     role="progressbar"
                                     data-pct="@item.ProgressPct"
                                     aria-valuenow="@item.ProgressPct"
                                     aria-valuemin="0" aria-valuemax="100"
                                     id="process-@item.ProgressId">
                                    @item.ProgressPct%
                                </div>
                            </div>
                        </p>
                        <p class="card-text mb-1">
                            <strong>Status:</strong>
                            <span id="progress-status-@item.ProgressId" class="badge 
                                        @(item.Status == "Completed" ? "bg-success" : 
                                          item.Status == "Failed" ? "bg-danger" : 
                                          item.Status == "Uploading" ? "bg-primary" : "bg-secondary")">
                                @item.Status
                            </span>
                        </p>
                        <p class="card-text mb-1"><strong>Rozpoczęto:</strong> @item.StartedAt.ToString("yyyy-MM-dd HH:mm")</p>
                        <p class="card-text mb-1"><strong>Zaktualizowano:</strong> @item.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                        <p class="card-text mb-2" id="progress-completed-@item.ProgressId"><strong>Zakończono:</strong> @(item.CompletedAt.HasValue ? item.CompletedAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")</p>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="paging">
                <ul class="pagination justify-content-center mt-3">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">«</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">»</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
