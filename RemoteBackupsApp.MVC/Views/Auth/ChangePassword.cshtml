@model RemoteBackupsApp.MVC.Models.Auth.ChangePasswordViewModel;

@{
    ViewData["Title"] = "Zmiana hasła";
}

<partial name="/Views/Home/_Navbar.cshtml" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card shadow-lg rounded-3">
            <div class="card-body p-4">
                <h4 class="text-center mb-4">@ViewData["Title"]</h4>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-center">@TempData["Success"]</div>
                }

                <form asp-action="ChangePassword" method="post" novalidate>
                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label"></label>
                        <input asp-for="CurrentPassword" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        Zmień hasło
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
