<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RemoteBackupsApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RemoteBackupsApp.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <div id="progressPopup" class="progress-popup">
        <p>Name: <span id="fileName"></span></p>
        <p>Status: <span id="statusText"></span></p>
        <progress id="progressBar" max="100" value="0"></progress>
    </div>

    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")
    <script>
        let connection = new signalR.HubConnectionBuilder()
            .withUrl("/uploadHub")
            .build();

        connection.on("ProgressUpdated", function (progress) {
            $('#statusText').text(progress.status);
            $('#progressBar').val(progress.percentage);
        });

        connection.on("UploadSuccess", function () {
            window.location.reload();
            $('#progressPopup').fadeOut();
        })
    </script>
</body>
</html>
