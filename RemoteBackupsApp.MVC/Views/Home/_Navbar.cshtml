@using Microsoft.Extensions.Caching.Memory
@inject IMemoryCache memoryCache;
@{
    string userName = memoryCache.Get<string>("Username") ?? "Użytkownik";
}

<nav class="navbar navbar-expand-lg navbar-dark custom-navbar shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="File" asp-action="Index">
            <i class="bi bi-cloud-arrow-up-fill me-2"></i> Remote Backups
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Przełącz nawigację">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">

                <li class="nav-item me-lg-3">
                    <a class="btn btn-outline-light fw-bold d-flex align-items-center custom-btn" asp-controller="File" asp-action="Index">
                        <i class="bi bi-folder2-open me-1"></i> Moje pliki
                    </a>
                </li>

                <li>
                    <a class="btn btn-outline-light fw-bold d-flex align-items-center custom-btn" asp-controller="FileImportPanel" asp-action="Index">
                        <i class="bi bi-files me-2"></i> Panel importów
                    </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://ui-avatars.com/api/?name=@userName&background=0D6EFD&color=fff&size=32"
                             alt="avatar" class="rounded-circle me-2" />
                        <span class="d-none d-sm-inline">@userName</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow rounded-3 custom-dropdown">
                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-controller="Auth" asp-action="ChangePassword">
                                <i class="bi bi-gear me-2"></i> Zmień hasło
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li class="px-3">
                            <form asp-controller="Auth" asp-action="Logout" asp-route-userName="@userName" method="post">
                                <button type="submit" class="btn btn-danger w-100 fw-bold">
                                    <i class="bi bi-box-arrow-right me-1"></i> Wyloguj
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>

            </ul>
        </div>
    </div>
</nav>
